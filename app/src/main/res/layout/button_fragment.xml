<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="0dp"
    android:layout_height="0dp"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintBottom_toBottomOf="parent">
    <Button
        android:id="@+id/button0"
        style="@style/buttonStyle"
        android:text="@string/_0"
        android:backgroundTint="@color/dark"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/buttonDot"
        style="@style/buttonStyle"
        android:text="@string/_dot"
        android:backgroundTint="@color/gray"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/button0" />

    <Button
        android:id="@+id/buttonEqual"
        style="@style/buttonStyle"
        android:text="@string/_equal"
        android:backgroundTint="@color/gray"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/buttonDot" />

    <Button
        android:id="@+id/buttonMinus"
        style="@style/buttonStyle"
        android:text="@string/_minus"
        android:backgroundTint="@color/gray"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/buttonEqual" />

    <Button
        android:id="@+id/button1"
        style="@style/buttonStyle"
        android:text="@string/_1"
        android:backgroundTint="@color/silver"
        app:layout_constraintBottom_toTopOf="@+id/button0"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/button2"
        style="@style/buttonStyle"
        android:text="@string/_2"
        android:backgroundTint="@color/silver"
        app:layout_constraintBottom_toTopOf="@+id/buttonDot"
        app:layout_constraintStart_toEndOf="@+id/button_1" />

    <Button
        android:id="@+id/button3"
        style="@style/buttonStyle"
        android:text="@string/_3"
        android:backgroundTint="@color/silver"
        app:layout_constraintBottom_toTopOf="@+id/buttonEqual"
        app:layout_constraintStart_toEndOf="@+id/button_2" />

    <Button
        android:id="@+id/buttonAdd"
        style="@style/buttonStyle"
        android:text="@string/_add"
        android:backgroundTint="@color/gray"
        app:layout_constraintBottom_toTopOf="@+id/buttonMinus"
        app:layout_constraintStart_toEndOf="@+id/button_3" />

    <Button
        android:id="@+id/button4"
        style="@style/buttonStyle"
        android:text="@string/_4"
        android:backgroundTint="@color/silver"
        app:layout_constraintBottom_toTopOf="@+id/button1"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/button5"
        style="@style/buttonStyle"
        android:text="@string/_5"
        android:backgroundTint="@color/silver"
        app:layout_constraintBottom_toTopOf="@+id/button2"
        app:layout_constraintStart_toEndOf="@+id/button_4" />

    <Button
        android:id="@+id/button6"
        style="@style/buttonStyle"
        android:text="@string/_6"
        android:backgroundTint="@color/silver"
        app:layout_constraintBottom_toTopOf="@+id/button3"
        app:layout_constraintStart_toEndOf="@+id/button_5" />

    <Button
        android:id="@+id/buttonDiv"
        style="@style/buttonStyle"
        android:text="@string/_minus"
        android:backgroundTint="@color/gray"
        app:layout_constraintBottom_toTopOf="@+id/buttonAdd"
        app:layout_constraintStart_toEndOf="@+id/button_6" />

    <Button
        android:id="@+id/button7"
        style="@style/buttonStyle"
        android:text="@string/_7"
        android:backgroundTint="@color/silver"
        app:layout_constraintBottom_toTopOf="@+id/button4"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/button8"
        style="@style/buttonStyle"
        android:text="@string/_8"
        android:backgroundTint="@color/silver"
        app:layout_constraintBottom_toTopOf="@+id/button5"
        app:layout_constraintStart_toEndOf="@+id/button7" />

    <Button
        android:id="@+id/button9"
        style="@style/buttonStyle"
        android:text="@string/_9"
        android:backgroundTint="@color/silver"
        app:layout_constraintBottom_toTopOf="@+id/button6"
        app:layout_constraintStart_toEndOf="@+id/button8" />

    <Button
        android:id="@+id/buttonMulti"
        style="@style/buttonStyle"
        android:text="@string/_multi"
        android:backgroundTint="@color/gray"
        app:layout_constraintBottom_toTopOf="@+id/buttonDiv"
        app:layout_constraintStart_toEndOf="@+id/button9" />

    <Button
        android:id="@+id/buttonOpen"
        style="@style/buttonStyle"
        android:text="@string/_open"
        android:backgroundTint="@color/gray"
        app:layout_constraintBottom_toTopOf="@+id/button7"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/buttonClose"
        style="@style/buttonStyle"
        android:text="@string/_close"
        android:backgroundTint="@color/gray"
        app:layout_constraintBottom_toTopOf="@+id/button8"
        app:layout_constraintStart_toEndOf="@+id/buttonOpen" />

    <Button
        android:id="@+id/buttonExp"
        style="@style/buttonStyle"
        android:text="@string/_exp"
        android:backgroundTint="@color/gray"
        app:layout_constraintBottom_toTopOf="@+id/button9"
        app:layout_constraintStart_toEndOf="@+id/buttonClose" />

    <Button
        android:id="@+id/buttonAC"
        style="@style/buttonStyle"
        android:longClickable="true"
        android:text="@string/_ac"
        android:backgroundTint="@color/maroon"
        app:layout_constraintBottom_toTopOf="@+id/buttonMulti"
        app:layout_constraintStart_toEndOf="@+id/buttonExp" />
</androidx.constraintlayout.widget.ConstraintLayout>
